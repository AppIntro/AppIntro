<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/appintro_background_color">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:textColor="@color/appintro_title_color"
        android:textSize="@dimen/appIntroHeadingTextSize"
        android:textStyle="bold"
        tools:text="Welcome" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:contentDescription="@string/app_intro_image_content_description"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/appintro_desc_color"
        android:textSize="@dimen/appIntroDescriptionTextSize"
        tools:text="This is a demo of the AppIntro Library" />
</LinearLayout>
