<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppIntroTheme" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="AppIntroButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/appintro_button_margin</item>
    </style>

    <style name="AppIntroNextButtonStyle" parent="AppIntroButtonStyle" />

    <style name="AppIntroSkipButtonStyle" parent="AppIntroButtonStyle">
        <item name="android:textColor">@color/appintro_skip_button_text_color</item>
        <item name="android:text">@string/app_intro_skip_button</item>
    </style>

    <style name="AppIntroDoneButtonStyle" parent="AppIntroButtonStyle">
        <item name="android:text">@string/app_intro_done_button</item>
        <item name="android:textColor">@color/appintro_done_button_text_color</item>
    </style>

    <style name="AppIntroBackButtonStyle" parent="AppIntroButtonStyle" />

    <style name="AppIntro2ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/ic_appintro_ripple</item>
        <item name="android:layout_height">@dimen/appintro2_fab_size</item>
        <item name="android:layout_width">@dimen/appintro2_fab_size</item>
        <item name="android:layout_margin">@dimen/appintro2_fab_margin</item>
    </style>

    <style name="AppIntro2NextButtonStyle" parent="AppIntro2ButtonStyle" />

    <style name="AppIntro2SkipButtonStyle" parent="AppIntro2ButtonStyle" />

    <style name="AppIntro2DoneButtonStyle" parent="AppIntro2ButtonStyle" />

    <style name="AppIntro2BackButtonStyle" parent="AppIntro2ButtonStyle" />

    <style name="AppIntro3ButtonStyle" parent="Widget.AppCompat.Button.Borderless" />

    <style name="AppIntro3SkipButtonStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/appintro3_skip_button_marginTop</item>
        <item name="android:layout_marginRight">@dimen/appintro3_skip_button_marginEnd</item>
        <item name="android:layout_marginEnd">@dimen/appintro3_skip_button_marginEnd</item>
        <item name="android:padding">@dimen/appintro3_skip_button_padding</item>
    </style>

    <style name="AppIntro3NextButtonStyle" parent="AppIntro3ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/appintro_next_button_background_color</item>
        <item name="android:layout_height">@dimen/appintro_bottombar_height</item>
        <item name="android:textColor">@color/appintro_next_button_text_color</item>
    </style>

    <style name="AppIntro3DoneButtonStyle" parent="AppIntro3ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/appintro_done_button_background_color</item>
        <item name="android:layout_height">@dimen/appintro_bottombar_height</item>
        <item name="android:textColor">@color/appintro_done_button_text_color</item>
    </style>

    <style name="AppIntroIndicatorContainerStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/appintro_indicator_margin</item>
    </style>

    <style name="AppIntroFragmentTitleStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/appintro_title_color</item>
        <item name="android:textSize">@dimen/appintro_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/appintro_title_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppIntroFragmentTitleStyleLandscape" parent="AppIntroFragmentTitleStyle">
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:textSize">@dimen/appintro_title_text_size_landscape</item>
        <item name="android:padding">@dimen/appintro_title_padding_landscape</item>
    </style>

    <style name="AppIntroFragmentDescriptionStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/appintro_desc_color</item>
        <item name="android:textSize">@dimen/appintro_desctext_size</item>
        <item name="android:padding">@dimen/appintro_desc_padding</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="AppIntroFragmentDescriptionStyleLandscape" parent="AppIntroFragmentDescriptionStyle">
        <item name="android:textSize">@dimen/appintro_desctext_size_landscape</item>
        <item name="android:padding">@dimen/appintro_desc_padding_landscape</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="AppIntroFragmentImageStyle">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="AppIntroFragmentImageStyleLandscape" parent="AppIntroFragmentImageStyle" />


    <style name="AppIntro2FragmentTitleStyle" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/appintro_title_color</item>
        <item name="android:textSize">@dimen/appintro_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/appintro_title_padding</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>

    <style name="AppIntro2FragmentDescriptionStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/appintro_desc_color</item>
        <item name="android:textSize">@dimen/appintro_desctext_size</item>
        <item name="android:padding">@dimen/appintro_desc_padding</item>
        <item name="android:gravity">top|center_horizontal</item>
    </style>

    <style name="AppIntro2FragmentImageStyle">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>
